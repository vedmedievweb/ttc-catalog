{
	"version": 2,
	"builds": [
		{
			"src": "./**/*",
			"use": "@vercel/static-build"
		},
		{
			"src": "server/**/*.ts",
			"use": "@vercel/node",
			"config": {
				"includeFiles": [
					"db/**"
				]
			}
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "/server/index.js"
		},
		{
			"src": "/(.*)",
			"dest": "/public/$1"
		}
	],
	"installCommand": "npm install",
	"buildCommand": "npm run build",
	"outputDirectory": "public"
}